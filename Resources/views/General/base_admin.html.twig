<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('bundles/objectsadmin/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/objectsadmin/css/bootstrap-responsive.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/objectsadmin/css/chosen.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/objectsadmin/css/jquery-ui.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/objectsadmin/css/jquery-ui-timepicker-addon.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/objectsadmin/css/backend.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar icon-white"></span>
                        <span class="icon-bar icon-white"></span>
                        <span class="icon-bar icon-white"></span>
                    </a>
                    <a class="brand" href="{{ path('sonata_admin_dashboard') }}">Home</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="{{ path('sonata_admin_dashboard') }}"><i class="icon-home"></i> {% trans %}Dashboard{% endtrans %}</a></li>
                            <li><a href="{{ path('admin_site_emails') }}"><i class="icon-envelope"></i> {% trans %}Site Emails{% endtrans %}</a></li>
                            <li><a href="{{ path('admin_site_configurations') }}"><i class="icon-wrench"></i> {% trans %}Site Configurations{% endtrans %}</a></li>
                            <li><a href="{{ path('logout') }}"><i class="icon-off"></i> {% trans %}Logout{% endtrans %}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid" style="margin-top: 60px;">
            <ul class="breadcrumb">
                <li><a href="{{ path('sonata_admin_dashboard') }}">Home</a> <span class="divider">/</span></li>
                {% block breadcrumb %}
                {% endblock %}
            </ul>
            {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-info">
                {{ flashMessage | trans }}.<a href="#" class="close" data-dismiss="alert">&times;</a>
            </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage | trans }}.<a href="#" class="close" data-dismiss="alert">&times;</a>
            </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-error">
                {{ flashMessage | trans }}.<a href="#" class="close" data-dismiss="alert">&times;</a>
            </div>
            {% endfor %}
            {% block body %}{% endblock %}
            <div class="pull-right" style="margin-bottom: 10px;clear: both;">
                <span class="label">
                    {% trans %}Developed by{% endtrans %} <a style="color: black" target="_blank" rel="noreferrer" href="http://objects.ws">Objects</a>
                </span>
            </div>
        </div>
        {% block javascripts %}
        <script src="{{ asset('bundles/objectsadmin/js/jquery-1.10.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/chosen.jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/jquery.livequery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/jquery.autosize-min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/jquery-ui-sliderAccess.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/jquery-ui.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/jquery-ui-timepicker-addon.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/objectsadmin/js/backend.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
